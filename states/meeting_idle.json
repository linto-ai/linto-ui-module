{
    "state_name" : "meeting_idle", 
    "animation" : "meeting_idle",
    "buttons" : ["recording_button", "mute_button", "cancel_button", "empty_button"],
    "wuw_spotting" : true,
    "events" : {
        "broker_message": {
            "utterance/start": {
                "any":{
                    "state" : "meeting_listening",
                    "sound" : "beep1"
                }
            },
            "lintoclient/request/send": {
                "any": {
                    "state": "meeting_com"
                }
            },
            "tts/speaking/start" : {
                "any": {
                    "state": "meeting_speaking"
                }
            }
        },
        "button_clicked": {
            "mute_button": {
                "true": {
                    "state" : "meeting_sleeping",
                    "publish" : {
                    "topic" : "lintoclient/action",
                    "message" : "{\"on\":\"%(DATE)\", \"value\":\"pause_meeting\"}"
                    }
                }

            },
            "cancel_button": {
                "clicked" : {
                    "mode": "command",
                    "publish" : {
                        "topic" : "lintoclient/action",
                        "message" : "{\"on\":\"%(DATE)\", \"value\":\"stop_meeting\"}"
                    }
                }
            },
            "empty_button": {
                "clicked" : {
                    "play" : "happy_meeting"
                }
            }
        }
    }
}