{
    "mode_name" : "meeting", 
    "default_state" : "meeting_idle",
    "events" : {
        "broker_message": {
            "lintoclient/disconnected" : {
                "any": {
                    "mode" : "disconnected",
                    "ring" : "ring_red"
                }
            },
            "lintoclient/action": {
                "stop_meeting": {
                    "mode" : "command",
                    "publish" : {
                        "topic" : "lintoclient/action",
                        "message" : "{\"on\":\"%(DATE)\", \"value\":\"stop_recording\"}"
                    }
                }
            }
        },
        "button_clicked": {
            "recording_button": {
                "true" : {
                    "publish" : {
                        "topic" : "lintoclient/action",
                        "message" : "{\"on\":\"%(DATE)\", \"value\":\"start_recording\"}"
                    }
                },
                "false" : {
                    "publish" : {
                        "topic" : "lintoclient/action",
                        "message" : "{\"on\":\"%(DATE)\", \"value\":\"pause_recording\"}"
                    }
                }
            }
        }
    }
}