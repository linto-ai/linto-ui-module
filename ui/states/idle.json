{
    "state_name" : "idle", 
    "animation" : "idle",
    "buttons" : ["mute_button", "empty_button", "volume_button"],
    "wuw_spotting" : true,
    "events" : {
        "broker_message": {
            "utterance/start": {
                "any":{
                    "state" : "listening",
                    "sound" : "beep1"
                }
            },
            "tts/speaking/start": {
                "any": {
                    "state": "speaking"
                }
            },
            "lintoclient/request/send": {
                "any": {
                    "state": "com"
                }
            },
            "lintoclient/ask": {
                "any": {
                    "state": "asking"
                }
            },
            "lintoclient/mute": {
                "any": {
                    "mute" : true
                }
            }
        },
        "button_clicked": {
            "empty_button": {
                "clicked": {
                    "play": "happy"
                },
                "w_clicked": {
                    "publish": {
                        "topic": "wuw_spotter/status",
                        "message": "{\"on\":\"%(DATE)\", \"value\":\"detect_utterance\"}"
                    }
                }
            }
        }
    }
}